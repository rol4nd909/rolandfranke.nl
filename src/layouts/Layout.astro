---
import '@styles/global.css'

import { Icon } from 'astro-icon/components'
import DarkLightToggle from '@components/DarkLightToggle.astro'

interface Props {
    title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Roland Franke's personal blog. Discover a creative frontend developer with expertise in HTML, CSS, React, and accessibility, dedicated to build inclusive and innovative web experiences. Explore projects, professional experience, and insights on modern web development."
        />

        <meta name="viewport" content="width=device-width" />

        <link rel="icon" type="image/png" href="/favicon-48x48.png" sizes="48x48" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="shortcut icon" href="/favicon.ico" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
        <meta name="apple-mobile-web-app-title" content="Roland" />
        <link rel="manifest" href="/site.webmanifest" />

        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <header>
            <Icon name="logo" size="3rem" />

            <DarkLightToggle />
        </header>

        <main class="scroller-block">
            <slot />
        </main>
    </body>
</html>

<style>
    header {
        position: absolute;
        inset: utopia.clamp(24, 48) utopia.clamp(24, 48) auto;
        display: flex;
        justify-content: space-between;
    }

    svg {
        color: var(--color-primary-400);
        background-color: var(--color-neutral-100);
        align-self: center;
    }
</style>
