---
import '@styles/global.css'

import DarkLightToggle from '@components/DarkLightToggle.astro'

interface Props {
    title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <header>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 900 900">
                <path
                    class="logo-cutout"
                    d="M511.8 354.9c-15 12.3-39.2 18.5-72.6 18.5H242.6V209.8h205c57.8 0 86.7 27 86.7 81.1 0 30.3-7.5 51.6-22.5 64ZM900 0v900H0V0h900ZM711 268.3h-56.8v214.8h-98.6c-14.2-34.6-33.2-56.3-57-65.3v-1.3a111.9 111.9 0 0 0 66.7-43.1c16.2-22.1 24.3-49.6 24.3-82.5 0-28.8-6.3-54.6-18.8-77.6-12.5-22.9-28.7-38-48.6-45-20-7.2-45.5-10.8-76.9-10.8H189v475.9h53.6V429.9h176.2c20.6 0 38.8 7.1 54.7 21.4 10 9 18.1 19.6 24.5 31.8h-31.3v56.3h50.7l28.3 94h58l-29.5-94h80v146.8H371v56.3h340V268.3Z"
                ></path>
            </svg>

            <DarkLightToggle />
        </header>

        <main>
            <slot />
        </main>
    </body>
</html>

<style>
    header {
        position: absolute;
        inset: utopia.clamp(24, 48) 1.5rem auto;
        display: flex;
        justify-content: space-between;
    }

    svg {
        width: 3rem;
        aspect-ratio: 1;
        fill: var(--color-primary-400);
        background-color: var(--color-neutral-100);
        align-self: center;
    }
</style>
