---
type Props = {
    pubDate: Date
}

const { pubDate } = Astro.props
---

<time datetime={pubDate.toISOString()}>
    {
        pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
        })
    }
</time>

<style>
    time {
        --flow-space: 0.5em;

        display: inline-flex;
        font-size: var(--fs-0);
    }
</style>
