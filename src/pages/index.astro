<style>
    section {
        display: grid;
        place-content: center;
        gap: utopia.clamp(16, 32);
        padding-block: var(--header-height);

        min-block-size: 100svh;

        > div {
            font-size: utopia.clamp(20, 38);
        }
    }

    h1 {
        font-size: utopia.clamp(80, 260, 400, 1200);
        font-weight: var(--fw-semibold);

        > span {
            color: var(--color-primary-400);
        }
    }

    .dot {
        font-size: utopia.clamp(8, 16);
        color: var(--color-primary-400);
        font-feature-settings: 'aalt' on;
    }

    p {
        font-size: utopia.clamp(18, 28);
    }

    @media (--motion-ok) {
        @supports (animation-timeline: scroll()) {
            .fade-out-down {
                animation: --fade-out-down linear forwards;
                animation-timeline: --fade-out-down;
                view-timeline-name: --fade-out-down;
                animation-range: cover 50%;
            }
        }
    }

    @keyframes --fade-out-down {
        to {
            opacity: 0;
            transform: translateY(40%);
        }
    }
</style>
